<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 第一组item：设置边框 -->
    <item>
        <shape>
            <!-- 设置边框线宽度和颜色 -->
            <stroke
                android:width="@dimen/com_wyc_label_size_1"
                android:color="@color/com_wyc_label_blue_sub_transparent">
            </stroke>
            <!-- 设置圆角度数 -->
            <corners android:radius="@dimen/com_wyc_label_size_2" />
            <!-- 设置背景颜色 -->
            <solid android:color="@color/com_wyc_label_transparent" />
            <!-- padding：设置边距 -->
            <padding
                android:bottom="@dimen/com_wyc_label_size_2"
                android:left="@dimen/com_wyc_label_size_2"
                android:right="@dimen/com_wyc_label_size_2"
                android:top="@dimen/com_wyc_label_size_2" >
            </padding>
        </shape>

    </item>

    <!-- 第二组item：设置spinner箭头图片(替换默认箭头)
    <item>
         bitmap.gravity：设置spinner的箭头放置位置
         bitmap.src：设置替换原spinner的箭头的图片资源
        <bitmap
            android:gravity="end"
            android:src="@drawable/spinner_btn">
        </bitmap>
    </item>
    -->
</layer-list>